{
  "extends": ["eslint:recommended", "react-app"],
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "all"
      }],
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "warn",
      "double"
    ],
    "curly": [
      "error",
      "all"
    ],
    "no-cond-assign": [
      "error",
      "always"
    ],
    "semi": [
      "error",
      "always"
    ],
    "brace-style": [
      "error",
      "1tbs",
      { "allowSingleLine": true }
    ],
    "default-case": "warn",
    "eqeqeq": "warn",
    "no-self-compare": "warn",
    "no-sequences": "warn",
    "no-unmodified-loop-condition": "warn",
    "no-shadow": "warn",
    "no-duplicate-imports": "error",
    "camelcase": "warn"
  }
}