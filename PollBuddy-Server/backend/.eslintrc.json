{
  "extends": ["eslint:recommended"],
  "parserOptions": { "ecmaVersion": 6 },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "all"
      }],
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "warn",
      "double"
    ],
    "curly": [
      "error",
      "all"
    ],
    "no-cond-assign": [
      "error",
      "always"
    ],
    "default-case": "warn",
    "eqeqeq": "warn",
    "no-self-compare": "warn",
    "no-sequences": "warn",
    "no-unmodified-loop-condition": "warn",
    "no-shadow": "warn",
    "no-duplicate-imports": "error",
    "brace-style": "error",
    "camelcase": "warn"
  }
}